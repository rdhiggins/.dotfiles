#!/bin/bash

# PS1='$ '
# PS1="\n\u:\w \[$EBLACK\]\$(vcprompt)\[$NO_COLOR\] \n$ "
# PS1="\n$(if [[ ${EUID} == 0 ]]; then echo '\[\033[01;31m\]\h'; else echo '\[\033[01;32m\]\u@\h'; fi)\[\033[01;34m\] \w \$([[ \$? != 0 ]] && echo \"\[\033[01;31m\]:(\[\033[01;34m\] \")\\[\033[00m\] \$(vcprompt)\\n$ "
# BASH: PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$ '
# ZSH: setopt PROMPT_SUBST ; PS1='[%n@%m %c$(__git_ps1 " (%s)")]\$ '
 
if [ -n "${BASH_VERSION}" ]; then 
	PS1='[\[\033[01;35m\]\u\[\033[00m\]@\[\033[01;33m\]\h\[\033[00m\] \[\033[01;36m\]\W$(__git_ps1 " (%s)")\[\033[00m\]]\n\$ '
elif [ -n "${ZSH_VERSION}" ]; then
	autoload -U colors
	colors
  setopt PROMPT_SUBST ; PS1='[%{$fg[magenta]%}%n%{$reset_color%}@%{$fg[yellow]%m%{$reset_color%} %{$fg[cyan]%}%c$(__git_ps1 " (%s)")%{$reset_color%}]
\$ ' 
fi

#
# git-prompt.sh stuff
# 
GIT_PS1_SHOWDIRTYSTATE="Yes"
GIT_PS1_SHOWSTASHSTATE="Yes"
GIT_PS1_SHOWUNTRACKEDFILES="Yes"
GIT_PS1_SHOWUPSTREAM="auto"

EDITOR="subl -w"

export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

export PYTHONPATH=/usr/local/lib/python2.7/site-packages:$PYTHONPATH

