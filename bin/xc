#!/usr/bin/env ruby
require 'shellwords'

if File.exists?('/Applications/Xcode.app') then
  if !((filename = Dir.glob("*.xc*").first).nil?)
    puts "Opening #{filename}"
    %x(open -a /Applications/Xcode.app #{Shellwords.escape(filename)})
  else
    puts "Did not find a project to open"
  end
else
  puts "Xcode is not installed"
end
