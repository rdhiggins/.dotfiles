#!/usr/local/bin/zsh

pushd

#
# Update dotfiles
# 
echo "Updating dotfiles"
cd ~/.dotfiles
git pull


#
# Update Homebrew
#
echo "Updating Homebrew"
brew update
brew upgrade
brew cleanup

#
# Update rvm
#
echo "Updating RVM"
rvm get stable

#
# Update Gems
# 
echo "Updating Gems"
gem update --system
gem update
gem cleanup


popd
